#!/bin/bash

declare -a files=( "README.md" "install" )

contains() {
	local e
	for e in "${files[@]}"; do [[ "$e" == "$1" ]] && return 0; done
	return 1
}

DIR=`pwd`
git --git-dir=$DIR/.git --work-tree=$DIR submodule init
git --git-dir=$DIR/.git --work-tree=$DIR submodule update

for file in $DIR/*; do
	contains ${file##*/}
	if [[ $? == 0 ]]; then continue; fi
	ln -s $file ~/.${file##*/}
done
